<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_course_form_inherit" model="ir.ui.view">
            <field name="name">bsma_website.course.form.inherit</field>
            <field name="model">slide.channel</field>
            <field name="inherit_id" ref="website_slides.view_slide_channel_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='website_id']" position="before">
                    <field name="target_age"/>
                    <field name="duration_hours"/>
                    <field name="duration_weeks"/>
                    <field name="course_price"/>
                    <field name="start_date"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
