<odoo>
  <data>
    <!-- Inherit Form View to Modify it -->
      <record id="sis_learning_inherit" model="ir.ui.view">
        <field name="name">sis_learning_inherit</field>
        <field name="model">op.batch</field>
        <field name="inherit_id" ref="openeducat_core.view_op_batch_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//field[@name='course_id']" position="after">
                <!-- Add your fields or attributes here -->
              <field name="student_id"/>
              <field name="istructor_id"/>
            </xpath>

        </field>
    </record>
  </data>
</odoo>
